{
    "$schema": "./node_modules/oxlint/configuration_schema.json",
    "plugins": [
        "import",
        "jsdoc",
        "oxc",
        "promise",
        "typescript",
        "typescript",
        "unicorn"
    ],
    "categories": {
        "correctness": "error",
        "perf": "error",
        "style": "error",
        "nursery": "warn",
        "pedantic": "warn",
        "restriction": "warn",
        "suspicious": "warn"
    },
    "rules": {
        "consistent-type-specifier-style": [
            "error",
            "prefer-inline"
        ],
        "id-length": "allow",
        "max-lines": [
            "error",
            {
                "max": 1000,
                "skipBlankLines": true,
                "skipComments": true
            }
        ],
        "no-magic-numbers": [
            "error",
            { "ignore": [0, 1], "ignoreTypeIndexes": true }
        ],
        "no-named-export": "allow",
        "no-namespace": "allow",
        "prefer-default-export": "allow",
        "require-param-type": "allow",
        "require-returns-type": "allow",
        "sort-keys": "allow"
    },
    "settings": {},
    "env": {
        "builtin": true
    },
    "globals": {},
    "ignorePatterns": []
}
